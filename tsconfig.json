{
    "compilerOptions": {
        "target": "es6",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
    },
    "include": [
        "**/*.ts",
        "*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}